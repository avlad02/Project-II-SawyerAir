@model IEnumerable<SawyerAir.Models.Route_Stop>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StopTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stop)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Route)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StopTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Stop.StopId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Route.RouteId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Route_StopId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Route_StopId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Route_StopId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
